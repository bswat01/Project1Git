
@{
    ViewBag.Title = "Contact";
}

<h2 style="text-align:center;">Contact</h2>

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>
        Contact
    </li>
</ul>

<div class="row">
    <div class="col-xs-5 container" style="border-style: solid; border-width: 5px; border-radius: 25px; height: 150px; vertical-align: middle; text-align: center">
        <h3>Phone: 555-555-5555</h3>
        <h3>Email: missionFAQs@test.com</h3>
    </div>

    <div class="col-xs-7">
        <div class="formContainer">
            <form>
                <div class="row">
                    <div class="col-25">
                        <label for="fname">First Name</label>
                    </div>
                    <div class="col-75">
                        <input type="text" id="fname" name="firstname" placeholder="Your name.." />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="lname">Last Name</label>
                    </div>
                    <div class="col-75">
                        <input type="text" id="lname" name="lastname" placeholder="Your last name.." />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="email">Email</label>
                    </div>
                    <div class="col-75">
                        <input type="text" id="email" name="email" placeholder="Your email.." />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="subject">Subject</label>
                    </div>
                    <div class="col-75">
                        <select id="subject" name="subject">
                            <option value="" selected disabled hidden>Choose Subject</option>
                            <option value="questions">Questions</option>
                            <option value="complaints">Complaints</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="message">Message</label>
                    </div>
                    <div class="col-75">
                        <textarea id="message" name="message" placeholder="Your message.." style="height: 200px"></textarea>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="Submit" />
                </div>
            </form>
        </div>
    </div>
</div>